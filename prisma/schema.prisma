generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // removed: otp relation (OTP is looked up by email)
  prompts           Prompt[]
  likes             Like[]
  tokenAccount      TokenAccount?
  tokenTransactions TokenTransaction[]
  subscriptions     Subscription[]
  aiUsage           AiUsage[]

  @@map("users")
}

model OTP {
  id        String   @id @default(uuid())
  email     String   @unique
  code      String
  createdAt DateTime @default(now())

  @@map("otps")
}

model Prompt {
  id            String    @id @default(uuid())
  ownerId       String
  owner         User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  title         String
  category      String
  visibility    String    @default("private")
  promptContent String
  media         Json?
  likesCount    Int       @default(0)
  isDeleted     Boolean   @default(false)
  deletedAt     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  likedBy Like[]

  @@map("prompts")
}

model Like {
  id        String   @id @default(uuid())
  userId    String
  promptId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  prompt Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)

  @@unique([userId, promptId], name: "user_prompt_unique")
  @@map("likes")
}

model TokenAccount {
  id        String  @id @default(uuid())
  userId    String  @unique
  tokens    BigInt  @default(0)
  trialUsed Boolean @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("token_accounts")
}

model TokenTransaction {
  id        String   @id @default(uuid())
  userId    String
  amount    BigInt // +ve for topup, -ve for usage
  type      String // FREE_TRIAL | TOPUP | SUB_RENEW | AI_USAGE | ADJUSTMENT
  reference String?
  meta      Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("token_transactions")
}

model SubscriptionPlan {
  id              String   @id @default(uuid())
  key             String   @unique
  name            String
  priceInPaise    Int // e.g. 19900 for â‚¹199.00
  tokensPerPeriod BigInt
  billingCycle    String // monthly, yearly
  razorpayPlanId  String   @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  subscriptions Subscription[]

  @@map("subscription_plans")
}

model Subscription {
  id                     String    @id @default(uuid())
  userId                 String
  planId                 String
  razorpaySubscriptionId String    @unique
  status                 String // active | cancelled | past_due | expired
  currentPeriodStart     DateTime?
  currentPeriodEnd       DateTime?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  user User             @relation(fields: [userId], references: [id])
  plan SubscriptionPlan @relation(fields: [planId], references: [id])

  invoices SubscriptionInvoice[]

  @@map("subscriptions")
}

model SubscriptionInvoice {
  id                String    @id @default(uuid())
  subscriptionId    String
  razorpayInvoiceId String    @unique
  amountInPaise     Int
  paid              Boolean   @default(false)
  paidAt            DateTime?
  createdAt         DateTime  @default(now())

  subscription Subscription @relation(fields: [subscriptionId], references: [id])

  @@map("subscription_invoices")
}

model AiUsage {
  id           String   @id @default(uuid())
  userId       String
  inputTokens  BigInt
  outputTokens BigInt
  totalTokens  BigInt
  model        String
  feature      String // HUMANIZER | REPHRASER
  meta         Json?
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("ai_usages")
}
